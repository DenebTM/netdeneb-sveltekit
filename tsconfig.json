{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,

    "ignoreDeprecations": "5.0", // remove this once https://github.com/sveltejs/kit/issues/8650 is resolved

		"paths": {
			"$lib": [
				"./src/lib"
			],
			"$lib/*": [
				"./src/lib/*"
			],
			"~": [
				"./src"
			],
			"~/*": [
				"./src/*"
			]
		},
	},
	"include": ["src", "vite.config.ts", ".svelte-kit/ambient.d.ts"]
}
